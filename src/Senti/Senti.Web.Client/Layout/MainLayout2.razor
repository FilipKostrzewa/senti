@inherits LayoutComponentBase

<HeadContent>
    <RadzenTheme Theme="material" />
</HeadContent>

<RadzenComponents />

<RadzenLayout>
    <RadzenHeader>
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0">
            <RadzenSidebarToggle Click="@(() => sidebarExpanded = !sidebarExpanded)" />
            <RadzenLabel Text="Theme" />
            <RadzenAppearanceToggle />
        </RadzenStack>
    </RadzenHeader>
    <RadzenSidebar Responsive="false" Style="width: max-content">
        <RadzenPanelMenu DisplayStyle="@(sidebarExpanded ? MenuItemDisplayStyle.IconAndText : MenuItemDisplayStyle.Icon)" ShowArrow="false">
            <RadzenPanelMenuItem Path="/" Text="Overview" Icon="home" />
            <RadzenPanelMenuItem Path="news" Text="News" Icon="dashboard" />
            <RadzenPanelMenuItem Path="timeline" Text="Timeline" Icon="dashboard" />
            <RadzenPanelMenuItem Path="test1" Text="Test 1" Icon="arrow" />
            <RadzenPanelMenuItem Path="test2" Text="Test 2" Icon="dashboard" />
            <RadzenPanelMenuItem Text="UI Fundamentals" Icon="auto_awesome">
                <RadzenPanelMenuItem Text="Themes" Icon="color_lens" />
                <RadzenPanelMenuItem Text="Colors" Icon="invert_colors" />
            </RadzenPanelMenuItem>
        </RadzenPanelMenu>
    </RadzenSidebar>
    <RadzenBody>
        <div class="rz-p-4">
            @Body
        </div>
    </RadzenBody>
    <RadzenFooter>
        Powered by Filip Kostrzewa
    </RadzenFooter>
</RadzenLayout>

@code {
    bool sidebarExpanded = true;
}
