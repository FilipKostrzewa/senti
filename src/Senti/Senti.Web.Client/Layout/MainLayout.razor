@inherits LayoutComponentBase

<HeadContent>
    <RadzenTheme Theme="material" />
</HeadContent>

<RadzenComponents />

<RadzenLayout>
    <RadzenHeader>
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0">
            <RadzenSidebarToggle Click="@(() => sidebarExpanded = !sidebarExpanded)" />
            <RadzenLabel Text="Theme" />
            <RadzenAppearanceToggle />
        </RadzenStack>
    </RadzenHeader>
    <RadzenSidebar Responsive="false" Style="width: max-content">
        <RadzenPanelMenu DisplayStyle="@(sidebarExpanded ? MenuItemDisplayStyle.IconAndText : MenuItemDisplayStyle.Icon)" ShowArrow="false">
            <RadzenPanelMenuItem Path="/" Text="Home" Icon="home" />
            <RadzenPanelMenuItem Path="headlines" Text="Headlines" Icon="language" />
            <RadzenPanelMenuItem Path="timeline" Text="Timeline" Icon="Timeline" />
            <RadzenPanelMenuItem Path="plusminus" Text="Plus +/- Minus" Icon="Timeline" />
            <RadzenPanelMenuItem Path="chart1" Text="Chart 1" Icon="Monitoring" />
            <RadzenPanelMenuItem Path="chart2" Text="Chart 2" Icon="Equalizer" />
            <RadzenPanelMenuItem Path="chart3" Text="Chart 3" Icon="Analytics" />
            <RadzenPanelMenuItem Path="colorbuttons" Text="Color Buttons" Icon="Analytics" />
            <RadzenPanelMenuItem Path="syslog" Text="System Logs" Icon="Monitoring" />
        </RadzenPanelMenu>
    </RadzenSidebar>
    <RadzenBody>
        <div class="rz-p-4">
            @Body
        </div>
    </RadzenBody>
    <RadzenFooter Style="text-align:right">
        Powered by <b>Filip Kostrzewa</b>
    </RadzenFooter>
</RadzenLayout>

@code {
    bool sidebarExpanded = true;
}
